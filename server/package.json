{
    "name": "sec-yahoo-backend",
    "version": "1.0.0",
    "type": "module",
    "main": "index.mjs",
    "scripts": {
        "dev": "node --watch index.mjs",
        "dev:server": "node --watch index.mjs",
        "dev:wrangler": "wrangler dev",
        "start": "node index.mjs",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:coverage": "jest --coverage"
    },
    "keywords": [
        "sec",
        "yahoo-finance",
        "fundamental-analysis",
        "financial-data",
        "xbrl"
    ],
    "author": "",
    "license": "ISC",
    "description": "Backend API for SEC XBRL Company Facts and Yahoo Finance data with fiscal period derivation and financial statement normalization",
    "dependencies": {
        "cors": "^2.8.5",
        "dotenv": "^16.6.1",
        "express": "^4.21.2",
        "node-cron": "^4.2.1",
        "serpapi": "^2.2.1",
        "yahoo-finance2": "^3.13.0"
    },
    "devDependencies": {
        "jest": "^30.2.0",
        "wrangler": "^3.0.0"
    },
    "jest": {
        "testEnvironment": "node",
        "testMatch": [
            "**/server/services/__tests__/**/*.test.cjs"
        ],
        "transform": {},
        "moduleFileExtensions": [
            "js",
            "mjs",
            "cjs",
            "json"
        ],
        "collectCoverageFrom": [
            "server/services/**/*.cjs",
            "!server/services/__tests__/**"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 70,
                "functions": 70,
                "lines": 70,
                "statements": 70
            }
        },
        "coverageReporters": [
            "text",
            "lcov",
            "html"
        ]
    },
    "engines": {
        "node": ">=18.0.0"
    }
}