        "module": "commonjs",
        "target": "ES2020",
        "checkJs": false,
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true
    },
    "exclude": [
        "node_modules",
        ".cache",
        "dist",
        "build"
    ],
    "include": [
        "**/*.js",
        "**/*.mjs",
        "**/*.cjs"
    ]
}